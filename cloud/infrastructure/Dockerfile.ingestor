FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app
COPY services/ingestor/pyproject.toml services/ingestor/setup.cfg /app/
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -e .

COPY services/ingestor/ingestor /app/ingestor
CMD ["vineguard-ingestor"]
